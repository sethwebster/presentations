{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "types": ["node", "@edge-runtime/types"],
    "lib": ["ES2020"],
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
